{
    "AWSTemplateFormatVersion" : "2010-09-09",
    "Description" : "IAM User For OasisDefender",
    "Parameters" : {
        "UserNameParameter" : {
          "Type" : "String",
          "Default" : "OasisUser",
          "Description" : "Enter username for oasis defender user"
        }
    },
    "Resources" : {
        "OasisUser" : {
            "Type" : "AWS::IAM::User",
            "Properties" : {
                "UserName" : { "Ref" : "UserNameParameter" },
                "Path" : "/",
                "Policies" : [ {
                    "PolicyName" : "OasisPolicy",
                    "PolicyDocument" : {
                        "Version": "2012-10-17",
                        "Statement": [
                            {
                                "Effect": "Allow",
                                "Action": [
                                    "ec2:DescribeInstances",
                                    "ec2:DescribeInternetGateways",
                                    "ec2:DescribeNatGateways",
                                    "ec2:DescribeNetworkAcls",
                                    "ec2:DescribeSecurityGroupRules",
                                    "ec2:DescribeSubnets",
                                    "ec2:DescribeVpcs",
                                    "elasticloadbalancing:DescribeLoadBalancers",
                                    "s3:ListAllMyBuckets"
                                ],
                                "Resource": "*"
                            },
                            {
                                "Effect": "Allow",
                                "Action": "rds:DescribeDBInstances",
                                "Resource": "arn:aws:rds:*:*:db:*"
                            }
                        ]
                    }
                } ]
            }
        },
        "OasisUserAccessKey" : {
            "Type" : "AWS::IAM::AccessKey",
            "Properties" : {
                "UserName" : { "Ref" : "UserNameParameter" }
            }
        },
    },
    "Outputs" : {
        "OasisAccessKey" : {
            "Description": "Access key value for Oasis Defender",  
            "Value" : { "Ref" : "OasisUserAccessKey" }
        },
        "OasisSecretKey" : {
            "Description": "Secret for access key for Oasis Defender",  
            "Value" : {
                "Fn::GetAtt" : [ "OasisUserAccessKey", "SecretAccessKey" ]
            }
        }
    }
} 